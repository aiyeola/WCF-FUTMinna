<div class="login-container d-flex align-items-center justify-content-center">
    <form action="/" class="login-form" method="POST" enctype="multipart/form-data">
        <h1 class="mb-5 font-weight-light"> FYB e-Year Book Biodata</h1>

        <div class="form-group">
            <input type="text" class="form-control rounded-pill form-control-lg" name="fullName" id="fullName"
                placeholder="Full Name" required>
        </div>

        <div class="form-group">
            <input type="text" class="form-control rounded-pill form-control-lg" name="department" id="department"
                placeholder="Department" required>
        </div>

        <div class="form-group">
            <input type="email" class="form-control rounded-pill form-control-lg" name="email" id="email"
                placeholder="Email" required>
        </div>

        <div class="form-group">
            <input type="number" class="form-control rounded-pill form-control-lg" name="contactNumber1"
                id="contactNumber1" placeholder="Contact Number 1" required>
        </div>

        <div class="form-group">
            <input type="number" class="form-control rounded-pill form-control-lg" name="contactNumber2"
                id="contactNumber2" placeholder="Contact Number 2">
        </div>

        <div class="form-group">
            <input type="text" class="form-control rounded-pill form-control-lg" name="hobbies" id="hobbies"
                placeholder="Hobbies" required>
        </div>

        <input type="submit" class="btn mt-5 btn-custom btn-block text-uppercase rounded-pill btn-lg"
            value="Submit Details">

    </form>
</div>